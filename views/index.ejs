<%- include('./partials/header.ejs') %>
<main>
  <!-- HOMEPAGE -->
  <div class="split-background">
    <h1>Plant Swap</h1>

    <section class="homepage-header">
      <a href="#stekjes" class="homepage-button-left">Stekjes</a>
      <a href="/create-stekje" class="homepage-button-right">Ruilen</a>
    </section>
    <div class="instruction-button">
      <button><a href="#instruction">Hoe werkt het?</a></button>
    </div>
  </div>

  <!-- START INSTRUCTIONS -->
  <article class="plant-instruction">
    <h2 id="instruction">Hoe het werkt</h2>
    <ol>
      <li>
        <p>Dit is hoe de eerste stap werkt</p>
      </li>
      <img
        class="plant-pot-divider"
        src="/assets/plant-pot-divider.png"
        alt="icon to devide instruction"
      />
      <li>
        <p>Dit is hoe de tweede stap werkt</p>
      </li>
      <img
        class="plant-pot-divider"
        src="/assets/plant-pot-divider.png"
        alt="icon to devide instruction"
      />
      <li>
        <p>Dit is hoe de derde stap werkt</p>
      </li>
    </ol>
  </article>
  <!-- END INSTRUCTIONS -->
  <!-- START PLANT OVERZICHT -->

  <!-- if statement voor succes melding -->
  <!-- als  -->
  <% if (posted) { %>
  <div class="succes-container">
    <p id="post-succes">
      Het plaatsen van je stekje is gelukt! Ververs de pagina om je stekje te
      bekijken
    </p>
  </div>
  <% } %>
  <!-- eind succesmelding -->

  <!-- EIND PLANT OVERZICHT -->
  <h2 class="plant-page-header">Beschikbare stekjes</h2>

  <div class="plant-container">
    <% stekjes.forEach(stekje => { %>
    <div class="plant-card-flip">
      <div class="plant-card">
        <div class="front">
          <div class="dot"></div>
          <% if (stekje.fotos[0]){ %>
          <img
            src="<%= stekje.fotos[0].small %>"
            alt="<%= stekje.naam %>"
            width="<%= stekje.fotos[0].width %>"
            height="<%= stekje.fotos[0].height %>"
          />
          <% }else{ %>
          <img
            src="data:image/png;base64,"
            alt="plant placeholder"
          />
          <% } %>
          <h2><%= stekje.naam %></h2>
        </div>
        <div class="back">
          <div class="dot"></div>
          <h2><%= stekje.naam %></h2>
          <ul>
            <li><span>Verpotten</span> <%= stekje.verpotten %></li>
            <li><span>Giftig</span> <%= stekje.giftig %></li>
            <li>
              <span>Land van herkomst</span> <%= stekje.landvanherkomst %>
            </li>
            <li><span>Voeding</span> <%= stekje.voeding %></li>
          </ul>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
</main>

<%- include('./partials/footer.ejs') %>
